{% extends "_boilerplate.twig" %}

{% block extrajs %}
    <script src="{{ paths.theme }}javascripts/vendor/blueimp-gallery.min.js"></script>
{% endblock %}

{% block content %}
<!-- Main columns -->
    <div class="row-fluid">
        <div class="span6 container">
            <div class="row-fluid">
                <div class="span12 bg-w txt-pad1">
                    <h3>{{ record.title }}</h3>
                    {{ record.body }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span6 bg-w txt-pad1">
                    <h4>{{ __("Prijzen") }}</h4>
                    {{ record.prices }}
                    <p class="small">
                        {{ __("Prijzen zijn per nacht, inclusief ontbijt en BTW, exclusief toeristenbelasting.") }}
                    </p>
                </div>
                <div class="span6 bg-w txt-pad1">
                    <h4>{{ __("Opties") }}</h4>
                    {{ record.options }}
                </div>
            </div>
        </div>

        <div class="span6 container">
            <div class="row-fluid">
                <div class="span12 bg-w txt-pad1 image-list">

                    {% for image in record.imagelist %}
                        <a href="{{ image(image) }}">
                            <img class="small" src="{{ thumbnail(image, 256, 256) }}" alt="Afbeelding {{ loop.index }}" />
                        </a>
                    {% endfor %}

                </div>
            </div>
            <div class="row-fluid">
                <div class="span12 bg-w txt-pad1">
                    <h4>{{ __("Algemene informatie") }}</h4>
                    {{ record.information }}
                </div>
            </div>
        </div>
    </div>

<!-- End Main Content and Sidebar -->
{% endblock %}

{% block extrabody %}
    <div id="blueimp-gallery" class="blueimp-gallery  blueimp-gallery-controls">
        <div class="slides"></div>
        <h3 class="title"></h3>
        <a class="prev">‹</a>
        <a class="next">›</a>
        <a class="close">×</a>
        <a class="play-pause"></a>
        <ol class="indicator"></ol>
    </div>
{% endblock %}
